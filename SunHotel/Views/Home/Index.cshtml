<div class="clr"></div>

<div class="row">
    <div class="col-lg-3">
        <div class=" card bg-light shadow-sm mt-5">
            <div class="card-body">
                <h4 class=""><strong>SOBRE EL HOTEL: </strong></h4>

                <p class="sobrenosotros margin-izquierda">
                    Somos un nuevo hotel en la línea de resorts Sun,
                    con una capacidad para 7,000 huéspedes con una <br> gran variedad de
                    restaurantes y una playa al nivel de las mejores de la región.
                </p>

            </div>
        </div>
    </div><!--end panelIzquierdo-->

    <div class="col-lg-9">
        <div class="d-inline-block pt-3 pl-3 shadow-sm mt-5 bg-light w-100">
            <h5 class=""><strong>OFERTAS MAS BUSCADAS</strong></h5>
        </div>

        <div class="row row-cols-1 row-cols-md-2 mt-3">
            @foreach (var item in Model)
            {
                var photopath = "~/img/habitacion/" + (!string.IsNullOrEmpty(item.Img) ? @item.Img : "Habitacion popular 3.jpeg");

                <div class="col mb-4">
                    <div class="card">
                        <img src="@photopath" asp-append-version="true" class="card-img-top img-fluid" alt="">
                        <div class="card-body">
                            <h5 class="card-title text-center">
                                @item.Nombre
                            </h5>
                            <a class="btn btn-outline-info  btn-lg w-100 text-decoration-none" asp-action="Habitacion" asp-route-id="@item.id">Detalles</a>
                        </div>
                    </div>
                </div>

