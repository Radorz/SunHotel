<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SunHotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/template.css">

</head>
<body>
            <div class="bg1">
                <div class="main-wrapp">
                    <header>

                        <div class="headerBox">
                            <div class="logo row">
                                <div class="col-2 mr-3">
                                    <a href="#" target="_self">
                                        <!--[ESPECIFICAR LA RUTA AL INICIO DEL PORTAL]-->
                                        <!--[SUSTITUIR ARCHIVO "logo.png" POR EL LOGO Y NOMBRE DE LA INSTITUCION]-->
                                        <img src="~/img/2021-04-05 20_47_26-Window.png" width="160" height="130" title="[ESPECIFICAR EL NOMBRE DE LA IMAGEN]" alt="[ESPECIFICAR EL ATRIBUTO ALTERNATICO]">
                                    </a>
                                </div>
                                <div class="col-4 ml-lg-5 mt-5">
                                    <a href="index.html" class="text-decoration-none text-dark"><h1 class="sunhotel margin-top-1">SunHotel</h1></a>
                                </div>
                            </div><!--end logo-->
                            <div class="headerBoxBox1">
                                <div class="repDom"></div>
                                <div class="pSearch">
                                    <!--[COLOCAR BUSCADOR EN ESTA PARTE]-->
                                    <div class="search">
                                        <input name="search" type="text" id="mod-search-searchword">
                                        <input name="search" type="image" src="~/img/searchButton.gif">
                                    </div><!--end search-->
                                </div><!--end pSearch-->
                                <div class="navMenu">
                                    <!--[COLOCAR EN ESTA PARTE EL MENU DE NAVEGACION FACIL]-->
                                    <ul class="menu">
                                        <li><a href="#">Inicio</a></li>
                                        <li><a href="#">Mapa de sitio</a></li>
                                        <li><a href="#">Contacto</a></li>
                                    </ul><!--end menu-->
                                </div><!--end navMenu-->
                            </div><!--end headerBoxBox1-->
                        </div><!--end headerBox-->

                        <div class="menu-h">
                            <div class="menu-h-Box">
                                <ul class="menu">
                                    <li><a href="#" class="text-decoration-none">Inicio</a></li>
                                    <li><a href="#" class="text-decoration-none">Ofertas</a></li>

                                </ul><!--end menu-->
                            </div><!--end menu-h-Box-->
                        </div><!--end menu-h-->
                    </header>
                    <div class="contentBoxMaster">
                        <div class="contentBoxMasterBox1">
                            <div class="contentMaster">

                                <main role="main">
                                    @RenderBody()
                                </main>

                            </div><!--end contentMaster-->
                        </div><!--end contentBoxMasterBox1-->
                    </div><!--end contentBoxMaster-->
                </div><!--end main-wrapp-->
    </div><!--end bg1-->
    
    
            <footer>
                <div class="main-wrapp">
                    <div class="contentBoxMasterBox1" id="footer">

                        <ul id="linesLogos">
                            <li id="line"></li>
                            <li id="logo1"></li><!--[SUSTITUIR LA IMAGEN "logoFooter1.gif" POR EL LOGO DE LA INSTITUION]-->
                            <li id="separator"></li>
                            <li id="logo2"></li><!--[ESTE ES EL ESCUDO DE LA REPUBLICA DOMINICANA]-->
                            <li id="line"></li>
                        </ul><!--end linesLogos-->

                        <div class="clr"></div>

                        <ul id="infoFooter">
                            <li id="space">&nbsp;</li>
                            <li id="info">
                                <a href="#">[NOMBRE COMPLETO DE LA INSTITUCION CON LAS SIGLAS AL FINAL]</a><!--[ESPECIFICAR LA RUTA AL INICIO DEL PORTAL]--><br>
                                [DIRECCION COMPLETA DE LA INSTITUCION]<br>
                                [TELEFONOS Y FAX DE LA INSTITUCION]<br>
                                <span>&copy; [AÑO ACTUAL] Todos los Derechos Reservados</span>
                            </li><!--end info-->
                            <li id="space">
                                <img src="~/img/nortic.png" alt="" title="" /><!--[RESERVADO PARA SELLO DE CERTIFICACION DE LA NORTIC A2]-->
                            </li>
                        </ul><!--end infoFooter-->

                    </div><!--end contentBoxMasterBox1-->
                </div><!--end main-wrapp-->
            </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
